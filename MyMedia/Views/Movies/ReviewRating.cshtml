@model MyMedia.Models.Movie.MovieReviewModel
@using Microsoft.AspNetCore.Identity
@using MyMedia.Core.User;
@inject SignInManager<MediaUser> SignInManager
@inject UserManager<MediaUser> UserManager
<form enctype="multipart/form-data" asp-controller="Movies" asp-action="CreateReview" method="post">
    <div class="form-group">
        <label asp-for="@Model.Titel"></label>
        <input class="form-control" asp-for="@Model.Titel" />
        <span class="text-danger" asp-validation-for="@Model.Titel"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Duration"></label>
        <input class="form-control" asp-for="@Model.Duration" />
        <span class="text-danger" asp-validation-for="@Model.Duration"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.IMDBLink"></label>
        <input class="form-control" asp-for="@Model.IMDBLink" />
        <span class="text-danger" asp-validation-for="@Model.IMDBLink"></span>
    </div>
    <div class="form-group">
        <div class="form-group">
            <label asp-for="@Model.Photo"></label>
            <input class="form-control" asp-for="@Model.Photo" />
            <span accept=".jpg,.jpeg,.png" class="text-danger" asp-validation-for="@Model.Photo"></span>
        </div>
    </div>
    <button class="btn btn-primary" type="submit" onclick="CreateSnackbarMovie(@Model.Titel)">Add Review</button>

</form>

