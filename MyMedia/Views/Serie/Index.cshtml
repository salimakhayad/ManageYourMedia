@model List<MyMedia.Models.Series.SerieListViewModel>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
    <div class="container">
        <h2>Serie <i class="fas fa-angle-double-right"></i>Index</h2>
        <hr />

                    @if (Model != null && Model.Any())
                    {
                        foreach (var serie in Model)
                        {
                            <div class="col-lg-3 m-1">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="card-img-top">
                                            @if (serie.Foto != null)
                                            {
                                                <img src="@String.Format("data:image/gif;base64,{0}", Convert.ToBase64String(serie.Foto))" alt="Serie Img" class="img-thumbnail" target="_blank" />
                                            }
                                        </div>
                                        <div class="hit-the-floor">
                                            <h4>@serie.Naam</h4>
                                        </div>
                                        <a asp-action="Edit" asp-controller="Serie" asp-route-id="@serie.Id"> Edit</a>
                                        <a asp-action="Delete" asp-controller="Serie" asp-route-id="@serie.Id"> Delete</a>
                                        <a asp-action="Details" asp-controller="Serie" asp-route-id="@serie.Id"> Details</a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="h1"> Currently no Serie for display </p>
                    }
                    <a asp-action="Create" class="btn btn-primary" asp-controller="Serie">Add Serie</a>
               
     </div>
        


