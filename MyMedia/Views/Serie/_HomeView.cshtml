@model MyMedia.Core.MediaClasses.Serie

    <a class="mt-2" asp-action="Details" asp-controller="Serie" asp-route-id="@Model.Id">
        <li class="list-group-item list-group-item-dark d-flex justify-content-between align-items-center">
            @Model.Naam aantal seizoenen
            <span class="badge badge-dark badge">
                @{var aantalSeizoenen = 0;}
                @{if (Model.Seizoenen.Count() > 0)
                    { aantalSeizoenen = Model.Seizoenen.Count(); }
                    else
                    {
                        aantalSeizoenen = 0;
                    }}
                @aantalSeizoenen
            </span>
        </li>
    </a>